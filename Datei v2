  <input id="filePicker" type="file" accept=".json,.yaml,.yml,.txt,.md,.html,.py,.csv" class="hidden" />

  <script src="https://cdn.jsdelivr.net/npm/js-yaml@4.1.0/dist/js-yaml.min.js"></script>
  <script>
    const $ = (s) => document.querySelector(s);
    const input = $('#input'), filename = $('#filename'), ext = $('#ext'), pretty = $('#pretty');
    const msg = $('#message'), charCount = $('#charCount'), lineCount = $('#lineCount'), byteSize = $('#byteSize');
    const statusBadge = $('#statusBadge'), highlight = $('#highlight');

    function updateStats() {
      const text = input.value || '';
      charCount.textContent = `${text.length} Zeichen`;
      lineCount.textContent = `${(text.match(/\\n/g) || []).length + (text.length ? 1 : 0)} Zeilen`;
      byteSize.textContent = `${new Blob([text]).size} Bytes`;
      detectTypeBadge(text);
    }

    function detectTypeBadge(text) {
      let label = '‚Äî';
      if (/^\\s*[\\[{]/.test(text)) label = 'JSON';
      else if (/^\\s*---/.test(text) || /:\\s/.test(text)) label = 'YAML';
      else if (/^<html/i.test(text)) label = 'HTML';
      else if (/^def |import |class /m.test(text)) label = 'Python';
      statusBadge.textContent = label;
    }

    function setMessage(type, text) {
      msg.classList.remove('hidden');
      msg.classList.toggle('bg-emerald-900/40', type === 'ok');
      msg.classList.toggle('text-emerald-300', type === 'ok');
      msg.classList.toggle('bg-rose-900/40', type === 'err');
      msg.classList.toggle('text-rose-300', type === 'err');
      msg.textContent = text;
    }

    function clearMessage() { msg.classList.add('hidden'); }

    function getMime(e) {
      switch (e) {
        case 'json': return 'application/json';
        case 'yaml': case 'yml': return 'text/yaml';
        case 'html': return 'text/html';
        case 'py': return 'text/x-python';
        case 'md': return 'text/markdown';
        case 'csv': return 'text/csv';
        default: return 'text/plain';
      }
    }

    function formatAccordingToExt() {
      const e = ext.value;
      let text = input.value;
      clearMessage();
      try {
        if (pretty.checked && e === 'json') {
          const obj = JSON.parse(text);
          text = JSON.stringify(obj, null, 2);
          setMessage('ok', 'JSON validiert & formatiert.');
        } else if (pretty.checked && (e === 'yaml' || e === 'yml')) {
          const obj = jsyaml.load(text);
          text = jsyaml.dump(obj, { lineWidth: -1 });
          setMessage('ok', 'YAML validiert & formatiert.');
        } else setMessage('ok', 'Text bleibt unver√§ndert.');
        input.value = text;
        updateStats();
        updateHighlight();
      } catch (err) {
        setMessage('err', 'Fehler: ' + err.message);
      }
    }

    function downloadFile() {
      const name = (filename.value || 'document').replace(/[^a-zA-Z0-9_\\-]/g, '_');
      const blob = new Blob([input.value], { type: getMime(ext.value) + ';charset=utf-8' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url; a.download = `${name}.${ext.value}`; a.click();
      URL.revokeObjectURL(url);
    }

    $('#downloadBtn').addEventListener('click', downloadFile);
    $('#formatBtn').addEventListener('click', formatAccordingToExt);
    $('#copyBtn').addEventListener('click', async()=>{await navigator.clipboard.writeText(input.value);setMessage('ok','Kopiert.');});
    $('#loadBtn').addEventListener('click', ()=>$('#filePicker').click());
    $('#filePicker').addEventListener('change', e=>{
      const file=e.target.files[0]; if(!file) return;
      const r=new FileReader();
      r.onload=()=>{input.value=r.result;updateStats();updateHighlight();setMessage('ok',`Geladen: ${file.name}`);} 
      r.readAsText(file);
    });

    input.addEventListener('input', ()=>{updateStats();updateHighlight();clearMessage();});
    document.addEventListener('keydown', e=>{if((e.ctrlKey||e.metaKey)&&e.key==='Enter'){e.preventDefault();formatAccordingToExt();}});

    function updateHighlight() {
      const val = input.value;
      let lang = 'json';
      if (/^---/.test(val) || /:\\s/.test(val)) lang = 'yaml';
      else if (/^<\\s*html/i.test(val)) lang = 'markup';
      else if (/^def |class |import /m.test(val)) lang = 'python';
      highlight.className = `language-${lang} mt-3 rounded-2xl`;
      highlight.textContent = val;
      Prism.highlightElement(highlight);
    }

    // === Theme Toggle ===
    const themeToggle = document.getElementById('themeToggle');
    const THEMES = {
      dark: { name:'üñ§ Dark', apply(){document.body.className='dark bg-zinc-950 text-zinc-100 transition-all duration-500';} },
      light: { name:'üíö Light Mind', apply(){document.body.className='light bg-gradient-to-br from-green-50 via-green-100 to-emerald-50 text-green-900 transition-all duration-500';} },
      violet: { name:'üíú Lina Violet', apply(){document.body.className='violet lina-glow text-violet-950 transition-all duration-700';} }
    };
    const ORDER=['dark','light','violet'];
    let current=localStorage.getItem('themeMode')||'dark';
    applyTheme(current);
    function applyTheme(mode){document.body.classList.remove('dark','light','violet');document.body.classList.add(mode);THEMES[mode].apply();themeToggle.textContent=THEMES[mode].name;localStorage.setItem('themeMode',mode);}
    themeToggle.addEventListener('click',()=>{const next=ORDER[(ORDER.indexOf(current)+1)%ORDER.length];current=next;applyTheme(next);});

    updateStats(); updateHighlight();
  </script>
</body>
</html>
